{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "preserve",
    "target": "esnext",
    "types": ["node"],

    "moduleResolution": "bundler",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "noImplicitAny": false,

    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "esModuleInterop": true,

    "baseUrl": ".",

    "paths": {
      "@src/*": ["./src/*"],
      "@configs/*": ["./src/configs/*"],
      "@shared/*": ["./src/shared/*"]
    },

    "typeRoots": ["./node_modules/@types", "./"]
  },
  "include": ["src/**/*.ts", "jwt-types.d.ts"]
}
